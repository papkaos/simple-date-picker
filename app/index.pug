doctype html
html(lang="en", ng-app="app")
    head
        meta(charset="UTF-8")
        title Simple Date Picker
        link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Roboto:400,500,700,400italic")
        link(rel="stylesheet", href="date-picker/date-picker.css")
        link(rel="stylesheet", href="app.css")
    body(ng-controller="AppController as appCtrl")
        div.container-wrapper
            h1 Simple Date Picker AngularJS
            date-picker-input(model-date='appCtrl.modelDate')
            div.users-date
                p Selected date: {{ appCtrl.modelDate | json }}


        script(src="libs/moment/moment.js")
        script(src="libs/angular/angular.js")
        script(src="date-picker/date-picker.js")
        script(src="date-picker/date-picker.directive.js")
        script(src="date-picker/date-picker.controller.js")
        //script(src="date-picker/date-picker.service.js")
        script(src="app.js")
